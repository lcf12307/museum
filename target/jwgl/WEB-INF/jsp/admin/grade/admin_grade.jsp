                <li><a href="/admin/course/list"><i class="fa fa-link"></i><span>课程表管理</span></a></li>
                <li><a href="/admin/term/list"><i class="fa fa-link"></i><span>学期表管理</span></a></li>
                <li><a href="/admin/info/list"><i class="fa fa-link"></i><span>通知表管理</span></a></li>
                <li><a href="/admin/admin/list"><i class="fa fa-link"></i><span>管理员表管理</span></a></li>
                <li><a href="/admin/${sessionScope.get("userid")}/grade"><i class="fa fa-link" ></i><span>成绩统计</span></a></li>
                <li class="header">选课系统</li>
                <li><a href="/admin/${sessionScope.get("userid")}/search"><i class="fa fa-link"></i><span>信息查询</span></a></li>
                <li><a href="/admin/${sessionScope.get("userid")}/detail"><i class="fa fa-link"></i><span>情况统计</span></a></li>
            </ul>
            <!-- /.sidebar-menu -->
        </section>
        <!-- /.sidebar -->
    </aside>

    <!--核心-->
    <div class="content-wrapper">
        <!--标题-->
        <section class="content-header">
            <h1>
                北京化工大学教务管理系统
                <small>后台系统</small>
            </h1>
            <!--位置导航-->
            <ol class="breadcrumb">
                <li><a href="#">Level</a></li>
                <li class="active">Here</li>
            </ol>
        </section>

        <!--网页正文-->
        <section class="content">

            <div  align="center">
                <div class="list-group" align="left">
                    <a id="showGrade" class="btn btn-primary">查看所有成绩</a>
                    <a id="showStats" class="btn btn-primary">查看专业统计</a>
                </div>
            </div>

            <div id="gradeDiv"  style="display:none">
                <div>
                    <h2 align="center">成绩信息</h2>
                </div>
                <div align="center" id="chooseDiv">
                    选择学年
                    <select name="schoolYear" id="schoolYear">
                        <option selected value="NO">未选择</option>
                    </select>
                    选择学期
                    <select name="term" id="term">
                        <option selected value="0">未选择</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                    </select>
                    <button id="queryBtn" class="btn btn-primary">查询</button>
                </div>

                <div  id="listDiv">
                </div>

            </div>

            <div id="selectDiv" class="showStats" style="display:none">
                <table>
                    <tr>
                        <td><h4>选择年级</h4></td>
                        <td>
                            <select id="select">
                                <option>2010</option>
                                <option>2011</option>
                                <option>2012</option>
                                <option>2013</option>
                                <option selected>2014</option>
                                <option>2015</option>
                                <option>2016</option>
                                <option>2017</option>
                            </select> 
                            </tr>
                        </td>
                </table>
                
                <button id="submitBtn" class="btn btn-primary">查询</button>
            </div>
            <div id="nav" class="showStats" style="display:none"></div>
            <div id="section" class="showStats" style="display:none"></div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!--页脚-->
    <footer class="main-footer">
        <!-- To the right -->
        <div class="pull-right hidden-xs">
            各位大佬强力驱动
        </div>
